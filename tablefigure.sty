% \DeclareFigure[<1단계 기본배율(기본 1)>]{파일명(라벨)}{명령이름}{캡션} 순으로 입력하면 됨
% 그림 크기가 최초에 보정이 필요한 경우 \DeclareFigure[0.8]{}{\aaa}{}와 같이 시작함.
% 최초 배율(1단계)이 100%이 되도록 할 것
% 값을 쓰지 않는 경우 1배율([1])로 들어감.
% 이후 본문에서 \aaa[0.8] 으로 최종 배율(2단계) 호출
%% box 내부에 wrap 형태로 들어갈 수 있게 동시에 선언함
\makeatletter
\NewDocumentCommand{\DeclareFigure}{O{1} m m m}{%
  % 일반 figure 선언
  \NewDocumentCommand{#3}{O{0.8}}{%
    \begin{figure}[H]\centering % 위 공백 살짝 줄임 \zz[0.2\bs]
      \zz[0.2\bs]
      \includegraphics[scale=\fpeval{#1*(##1)}]{figures/#2}% 실제 그림
      \caption{#4}\label{fig:#2} \zz % 아래공백 세팅
    \end{figure}}%
  %
  % 이름에서 백슬래시 제거 (\foo → foo)
  \edef\tempname{\expandafter\@gobble\string#3}%
  %
  % 오른쪽 wrap은 그림 호출 시 wrapR을 추가하면 됨
  \expandafter\NewDocumentCommand\csname wrapR\tempname\endcsname{O{0.8}}{%
    \sbox0{\includegraphics[scale=\fpeval{#1*(##1)}]{figures/#2}}% 그림 가로폭 위한 박스 sbox0
    \edef\wrapwidth{\the\wd0}% 측정한 가로 폭 wd0을 wrapwidth에 저장
    \captionsetup[figure]{width=\linewidth}% 캡션 너비 본문크기로 지정
    \sbox1{% 캡션이 포함된 새로운 박스 sbox1 생성
      \begin{minipage}{\wrapwidth}
        \centering
        \usebox0
        \captionof{figure}{#4}\label{fig:#2}%
      \end{minipage}}
    \edef\wrapheight{\dimexpr\ht1+\dp1\relax}% 세로 높이 계산 - 잘안됨 나중에 다시
    \begin{wrapfigure}{r}{\wrapwidth}%
      \zz[0.2\bs]
      \centering
      \usebox1
    \end{wrapfigure}}%
  %
  % 왼쪽 wrap은 그림 호출 시 wrapL을 추가하면 됨
  \expandafter\NewDocumentCommand\csname wrapL\tempname\endcsname{O{0.8}}{%
    \sbox0{\includegraphics[scale=\fpeval{#1*(##1)}]{figures/#2}}% 그림 가로폭 위한 박스 sbox0
    \edef\wrapwidth{\the\wd0}% 측정한 가로 폭 wd0을 wrapwidth에 저장
    \captionsetup[figure]{width=\linewidth}% 캡션 너비 본문크기로 지정
    \sbox1{% 캡션이 포함된 새로운 박스 sbox1 생성
      \begin{minipage}{\wrapwidth}
        \centering
        \usebox0
        \captionof{figure}{#4}\label{fig:#2}%
      \end{minipage}}
    \edef\wrapheight{\dimexpr\ht1+\dp1\relax}% 세로 높이 계산 - 잘안됨 나중에 다시
    \begin{wrapfigure}{l}{\wrapwidth}% 여기만 r에서 l로 바꿈
      \zz[0.2\bs]
      \centering
      \usebox1
    \end{wrapfigure}}%
}
\makeatother

